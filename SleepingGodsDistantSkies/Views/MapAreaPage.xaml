<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SleepingGodsDistantSkies.ViewModels"
             x:Class="SleepingGodsDistantSkies.Views.MapAreaPage"
             Title="MapView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding MapArea.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView ItemsSource="{Binding MapArea.Locations}" SelectedItem="{Binding SelectedLocation}" />
    </VerticalStackLayout>
</ContentPage>