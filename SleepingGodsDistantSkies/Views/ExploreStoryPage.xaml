<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SleepingGodsDistantSkies.ViewModels"
             xmlns:model="clr-namespace:SleepingGodsDistantSkies.Model"
             x:Class="SleepingGodsDistantSkies.Views.ExploreStoryPage"
             x:DataType="viewModels:ExploreStoryViewModel"
             Title="{Binding CurrentStory.Number}">
    <ScrollView>
        <VerticalStackLayout>
            <Picker ItemsSource="{Binding Statuses}" SelectedItem="{Binding Status}" />
            <CollectionView ItemsSource="{Binding CurrentStory.Stories}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Story">
                        <Grid Padding="5">
                            <Frame>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ExploreStoryViewModel}}, Path=GoToStoryCommand}" 
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <StackLayout>
                                    <Label Text="{Binding Number}" />
                                    <Label Text="{Binding Status}" />
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Entry Text="{Binding Keyword}" />
            <Button Text="Gain Keyword" Command="{Binding AddKeywordCommand}" />
            <Button Text="Lose Keyword" Command="{Binding RemoveKeywordCommand}" />
            <Button Text="Go Back" Command="{Binding GoBackToTownCommand}" CommandParameter="{Binding Town}" />
            <Label Text="Keywords" />
            <CollectionView ItemsSource="{Binding CampaignData.Keywords}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
