<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SleepingGodsDistantSkies.Views.AddStoryPage"
             xmlns:viewModels="clr-namespace:SleepingGodsDistantSkies.ViewModels"
             xmlns:model="clr-namespace:SleepingGodsDistantSkies.Model"
             x:DataType="viewModels:AddStoryViewModel"
             Title="{Binding CurrentStory.Number}">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Add new story," />
            <Label Text="Number" />
            <Entry Text="{Binding StoryNumber}" />
            <Label Text="Required Keyword" />
            <Entry Text="{Binding RequiredKeyword}" />
            <Button Text="Add" Command="{Binding AddCommand}" />
            <Label Text="Add existing story," />
            <Picker ItemsSource="{Binding ExistingStories}" SelectedItem="{Binding SelectedExistingStory}" ItemDisplayBinding="{Binding Number}" />
            <Button Text="Add existing story," Command="{Binding AddExistingStoryCommand}" />
            <Label Text="Explore story," />
            <Button Text="Explore" Command="{Binding ExploreCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>