<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SleepingGodsDistantSkies.ViewModels"
             xmlns:model="clr-namespace:SleepingGodsDistantSkies.Model"
             x:Class="SleepingGodsDistantSkies.Views.MainPage"
             x:DataType="viewModels:MainViewModel">
    <ScrollView>
        <VerticalStackLayout>
            <Label Margin="5" Text="Campaign Name" />
            <Entry Margin="5" Text="{Binding NewCampaignName}" />
            <Button Margin="5" Text="Start Sleeping Gods Distant Skies" Command="{Binding StartDistantSkiesCampaignCommand}" />
            <Button Margin="5" Text="Start Empty Campaign" Command="{Binding StartEmptyCampaignCommand}" />

            <Label/>
            <Label/>
            <Label Margin="5" Text="Existing Campaigns"/>
            <Picker Margin="5" ItemsSource="{Binding Campaigns}" SelectedItem="{Binding SelectedCampaign}" />
            <Button Margin="5" Text="Load" Command="{Binding LoadCampaignCommand}" />
            <Button Margin="5" Text="Delete" Command="{Binding DeleteCampaignCommand}" />
        </VerticalStackLayout> 
    </ScrollView>

</ContentPage>
